<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="paperformat_presupuesto_od" model="report.paperformat">
        <field name="name">Presupuesto</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">35</field>
        <field name="margin_bottom">39</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">25</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_presupuesto_nod" model="ir.actions.report">
        <field name="name">Presupuesto TecnoPlus</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">presupuesto.report_saleorder_document_od</field>
        <field name="report_file">presupuesto.report_saleorder_document_od</field>
        <field name="print_report_name">('Presupuesto - %s' %(object.name))</field>
        <field name="binding_model_id" ref="sale.model_sale_order" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="presupuesto.paperformat_presupuesto_od" />
    </record>


</odoo>